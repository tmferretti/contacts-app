<%= form_tag "/contacts/#{@contact.id}", method: :patch do%>

<form>
  <div class="form-group">
    <label for="exampleInputEmail1">First Name</label>
    <input type="text" class="form-control" aria-describedby="emailHelp" value="<%= @contact.first_name %>" name="form_first_name">
  </div>
  
  <div class="form-group">
    <label for="exampleInputPassword1">Last Name</label>
    <input type="text" class="form-control" name="form_last_name" value="<%= @contact.last_name %>"
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input type="text" class="form-control" aria-describedby="emailHelp" value="<%= @contact.email %>" name="form_email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Phone Number</label>
    <input type="text" class="form-control" name="form_phone_number" value="<%= @contact.phone_number %>"
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


<% end %>


<%= button_to "Delete", {:controller => :contacts,
      :action => 'destroy', :id => @contact.id }, :method => :delete %>